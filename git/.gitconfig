[alias]
	s = status
	ci = commit
	co = checkout
	sl = log --graph --format=format:'%C(bold blue)%h%C(reset) %C(green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim magenta)%an%C(reset)%C(bold yellow)%d%C(reset)' --all --date-order -n 20
	d = diff
	a = add
	b = branch
	sb = git blame -w -C -C -C
	sd = diff --word-diff -w
	rekt = git push --force-with-lease
	std = diff --staged
	rbc = rebase --continue
[user]
	email = aozdemir@hmc.edu
	name = Alex Ozdemir
[credential "github.com"]
        username = alex-ozdemir
        helper = "cache"
[credential "git.overleaf.com"]
        username = aozdemir@stanford.edu
        helper = "store"
[diff]
	colorMoved = zebra
	colorMovedWs = ignore-space-change
	algorithm = histogram
[pull]
	ff = only
[merge]
	tool = vimdiff
	diff-algorithm = patience
	strategy = recursive
	args = patience
[init]
	defaultBranch = main
